#!/bin/bash -l
#SBATCH -A p2012172
#SBATCH -p node -N 0 -n 0
#SBATCH -t 00:00:00 

# Author: Maurizio Di Stefano

# @RELEASE project (http://www.release-project.eu/)

# USAGE: sdmon_start [Configuration File]  default is 'trace.config'

verbose=$1

echo ""
echo "************ START TIME: `date +'%T'` ************"
Oldmon=`ps -axu|grep sdmon_master| grep beam| head -n 1 | awk '{print $2}'`
if [ -n "${Oldmon}" ]; then
	echo "Killing old sdmon_master with PID = $Oldmon";
	kill -9 $Oldmon
fi



if [ -n "${verbose}" ] && [ $verbose = "-v" ]; then
	erl -hidden -name sdmon_master@`hostname -i` -config ./config/group.config -eval "application:start(sdmon)" -pa ./ebin
else 
	erl -detached -hidden -name sdmon_master@`hostname -i` -config ./config/group.config -eval "application:start(sdmon)" -pa ./ebin

	echo "Started  sdmon_master@`hostname -i`  with PID = `ps -axu|grep sdmon_master| grep beam| head -n 1 | awk '{print $2}'`"

	echo "To attach type: ./bin/to_master"
fi


echo "*************** DONE `date +'%T'` ****************"
echo ""
