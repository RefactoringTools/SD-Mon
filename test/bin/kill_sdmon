#!/bin/bash -l
#SBATCH -A p2012172
#SBATCH -p node -N 0 -n 0
#SBATCH -t 00:00:00 

# Author: Maurizio Di Stefano

# @RELEASE project (http://www.release-project.eu/)

# USAGE: ./kill_sdmon


PID=`ps -axu|grep sdmon| grep beam| head -n 1 | awk '{print $2}'`
if [ -n "${PID}" ]; then
	echo "Killing sdmon with PID = $PID";
	kill -9 $PID
else
	echo "sdmon not alive";
fi
