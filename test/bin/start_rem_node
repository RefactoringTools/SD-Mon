#!/bin/bash -l
#SBATCH -A p2012172
#SBATCH -p node -N 0 -n 0
#SBATCH -t 00:00:00 

# Author: Maurizio Di Stefano

# @RELEASE project (http://www.release-project.eu/)

# USAGE: ./start_rem_node <Node Name, HOST IP>

NODE=$1
IP=$2

PID=`ssh -q -l md504 $2 ps -axu|grep $1| grep beam| head -n 1 | awk '{print $2}'`;

if [ -n "${PID}" ]; then
	echo "$1 already started with PID = $PID";
else
	ssh -q -l md504 $2 erl -detached -name $1@$2 -setcookie `cat ~/.erlang.cookie` -run run_env start_dummy -s init stop -pa '$HOME'/SD-Mon/ebin
	echo "Started  $1@$2  with PID = `ssh -q -l md504 ${IP} ps -axu|grep ${NODE}@${IP} | grep beam| head -n 1 | awk '{print $2}'`"
fi




