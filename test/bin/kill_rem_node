#!/bin/bash -l
#SBATCH -A p2012172
#SBATCH -p node -N 0 -n 0
#SBATCH -t 00:00:00 

# Author: Maurizio Di Stefano

# @RELEASE project (http://www.release-project.eu/)

# USAGE: ./kill_rem_node <Node Name, Host IP>


PID=`ssh -q -l md504 $2 ps -axu|grep $1| grep beam| head -n 1 | awk '{print $2}'`;

if [ -n "${PID}" ]; then
	echo "Killing $1@$2 with PID = $PID"
	ssh -q -l md504 $2 kill -9 $PID
else
	echo "$1@$2 not alive";
fi
